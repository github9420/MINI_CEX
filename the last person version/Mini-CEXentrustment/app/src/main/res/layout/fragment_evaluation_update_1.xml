<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/evaluation_update_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="61dp"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:background="@color/md_red_800"
            android:text="取消" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="284dp"
            android:layout_height="213dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/evaluation_update_apply_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/evaluation_update_apply_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/evaluation_update_run_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/evaluation_update_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/evaluation_update_evaluation_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/evaluation_update_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/evaluation_update_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:layout_below="@+id/linearLayout2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="請判斷此次看診病例複雜程度"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/evaluation_update_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="病例複雜程度" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="依據學員這次看診表現，請判斷下次類似病人情境您對他/她的信賴程度"/>

            <Spinner
                android:id="@+id/evaluation_update_perform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="病例複雜程度" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/evaluation_update_next_btn"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/md_blue_400"
                    android:elevation="0dp"
                    android:text="下一步" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>