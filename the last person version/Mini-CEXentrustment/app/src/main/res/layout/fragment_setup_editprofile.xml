<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_setup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:text="楊勝彰  (25399)"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/id_setup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e-mail"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_weight="0.5"/>
    <EditText
        android:id="@+id/id_setup_cellphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手機號碼"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_weight="0.5"
        />
    <EditText
        android:id="@+id/id_setup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="電話號碼"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_weight="0.5"/>
    <EditText
        android:id="@+id/id_setup_exphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="分機號碼"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_weight="0.5"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:text="修改密碼"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/id_setup_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:hint="設定新密碼密碼"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_weight="0.5"/>

    <EditText
        android:id="@+id/id_setup_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="再次輸入密碼"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true" android:layout_weight="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/id_btn_setup_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:text="返回" />

        <Button
            android:id="@+id/id_btn_setup_profile_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:text="確定" />
    </LinearLayout>


</LinearLayout>