<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/md_black_900"
        android:orientation="horizontal">

        <Button
            android:id="@+id/evaluation_update_3_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:background="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1.5"
            android:text="新增評量(3/3)"
            android:textColor="@color/colorWrite2"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="請在本次臨床指導後摘要你對他/她的指導分項錄音幾句回饋"
        android:textSize="18sp" />

    <Button
        android:id="@+id/evaluation_update_3_audiostart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginRight="@dimen/dp_150"
        android:background="@android:drawable/presence_audio_away" />

    <Button
        android:id="@+id/evaluation_update_3_audiostop_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginRight="@dimen/dp_150"
        android:background="@android:drawable/ic_media_pause" />

    <TextView
        android:id="@+id/evaluation3_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to record" />

    <TextView
        android:id="@+id/evaluation3_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="評語" />

    <EditText
        android:id="@+id/evaluation_update_3_comment_edit"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/evaluation_update_3_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_100"
        android:background="@color/md_blue_400"
        android:text="送  出"
        android:textColor="@color/colorWrite2" />
</LinearLayout>