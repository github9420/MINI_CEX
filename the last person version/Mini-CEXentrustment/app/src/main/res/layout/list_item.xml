<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/news_content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/news_newsType_id"
        android:layout_toStartOf="@+id/news_newsType_id"
        android:text="TextView01"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/news_newsType_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView01"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/news_dateTime_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/news_content_id"
        android:text="TextView01"
        android:textSize="20dip" />
</RelativeLayout>